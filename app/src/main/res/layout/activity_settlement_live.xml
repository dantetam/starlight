<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <io.github.dantetam.StarlightSurfaceView
        android:id="@+id/worldView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        tools:context="io.github.dantetam.MapsActivityCurrentPlace"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tileDetailsLayout"
        android:orientation="vertical">
        <TextView
            android:text=""
            android:id="@+id/buildingLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
        <TextView
            android:text=""
            android:id="@+id/buildingTileResource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
        <TextView
            android:text=""
            android:id="@+id/buildingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
        <TextView
            android:text=""
            android:id="@+id/buildingDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
        <TextView
            android:text=""
            android:id="@+id/buildingProduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
        <TextView
            android:text=""
            android:id="@+id/buildingHousingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
        <TextView
            android:text="@string/hello_world"
            android:id="@+id/buildingItemsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Construct"
            android:id="@+id/btnConstructionBuilding"
            android:background="#ffff1a7c"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="newConstructionBuildingList"
            android:visibility="gone"
            android:layout_alignParentBottom="true"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Production Choice"
            android:id="@+id/btnProductionList"
            android:background="#ffff1a7c"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="newProductionRecipesList"
            android:visibility="gone"
            android:layout_alignParentBottom="true"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Upgrades"
            android:id="@+id/btnUpgradesList"
            android:background="#ffff1a7c"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="newUpgradesList"
            android:visibility="gone"
            android:layout_alignParentBottom="true"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Trade"
            android:id="@+id/btnTradeResources"
            android:background="#ffff1a7c"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="openTradeResources"
            android:visibility="gone"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/constructionBuildingList"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productionRecipesList"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buildingUpgradesList"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/localTradeList"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollTradeDialog"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tradeDialog"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

        <TextView
            android:text=""
            android:id="@+id/personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
        <TextView
            android:text=""
            android:id="@+id/personHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            android:elevation="10dp"/>
    </LinearLayout>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Draft/Undraft All"
        android:id="@+id/btnToggleDraft"
        android:background="#ffff1a7c"
        android:textColor="#ffffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="toggleDraft"
        android:layout_alignParentBottom="true"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Local Trade"
        android:id="@+id/btnTradeLocalSettlements"
        android:background="#ffff1a7c"
        android:textColor="#ffffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="showLocalTradeMenu"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btnToggleDraft"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Overworld"
        android:id="@+id/btnOverworld"
        android:background="#ffff1a7c"
        android:textColor="#ffffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="showOverworld"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btnTradeLocalSettlements"/>
</RelativeLayout>